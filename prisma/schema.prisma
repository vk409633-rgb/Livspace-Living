// Bulk Import Log
model BulkImportLog {
  id          String   @id @default(cuid())
  fileName    String
  totalRows   Int
  successRows Int
  failedRows  Int
  errors      String?
  
  importedBy  String
  
  createdAt   DateTime @default(now())
}

// Service Booking model (for installation, tile cutting, 3D design, showroom visit)
model ServiceBooking {
  id          String   @id @default(cuid())
  
  serviceType String
  
  customerName String
  email       String
  phone       String
  
  preferredDate DateTime
  preferredTime String?
  
  address     String?
  city        String?
  
  message     String?
  
  status      String        @default("PENDING")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([serviceType])
  @@index([status])
}

